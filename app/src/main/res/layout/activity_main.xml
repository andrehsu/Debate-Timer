<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    tools:context="andre.debatetimer.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_timer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bt_7min"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_timerDisplayMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_display_count_up"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_bellsAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_timerDisplayMode"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.44"/>

        <TextView
            android:id="@+id/tv_timerNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="&#8211;"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/timerNormal"
            android:textSize="140dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_timer_m"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SpUsage"
            tools:text="0"/>

        <TextView
            android:id="@+id/tv_timer_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/timer_at_start_m"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/timerNormal"
            android:textSize="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_timer_colon"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:text="0"/>

        <TextView
            android:id="@+id/tv_timer_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text=":"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/timerNormal"
            android:textSize="140dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_timer_m"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@id/tv_timer_m"
            tools:ignore="HardcodedText,SpUsage"/>

        <TextView
            android:id="@+id/tv_timer_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/timer_at_start_s"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/timerNormal"
            android:textSize="140dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_timer_colon"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:text="00"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_startingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/bt_7min"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt_startPause"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:text="@string/start"
        android:textSize="32sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bt_7min"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt_3sec"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag='3'
        android:text="3s"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_2min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_2min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag='120'
        android:text="2m"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bt_3sec"
        app:layout_constraintRight_toLeftOf="@+id/bt_3min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_3min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag="180"
        android:text="3m"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_2min"
        app:layout_constraintRight_toLeftOf="@+id/bt_4min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_4min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag="240"
        android:text="4m"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_3min"
        app:layout_constraintRight_toLeftOf="@+id/bt_5min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_5min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag="300"
        android:text="5m"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_4min"
        app:layout_constraintRight_toLeftOf="@+id/bt_7min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_7min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag="420"
        android:text="7m"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_5min"
        app:layout_constraintRight_toLeftOf="@+id/bt_8min"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/bt_8min"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:tag="480"
        android:text="8m"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_7min"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"/>

</android.support.constraint.ConstraintLayout>
